@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@if(Model.Item != null)
{ 
<div class="highlight">
    Page item Name : @Model.PageItem.Name
    <br />
    Item Name : @Model.Item.Name / @Model.Rendering.Item
    <br />
    Parameter : @Model.Rendering.Parameters["Colour"]
</div>
}
